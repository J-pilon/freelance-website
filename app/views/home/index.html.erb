<section class="px-4 py-16 bg-background-navy md:px-8">
  <div class="flex flex-col items-center content-container">
    <div class="mb-8 pill">
      <p class="text-sm tracking-widest text-white uppercase">What we do</p>
    </div>

    <div class="flex-col w-full space-y-16">
      <%= render partial: "shared/service-card", locals: {
        reverse: false,
        image_src: asset_path("web-application-dev.jpg"),
        heading: "Web Application Design & Development",
        description: "Transform your startup’s vision into a robust and scalable web application with ClientFirst Labs. Our team specializes in creating user-friendly, high-performance web applications tailored to meet your business needs. Benefit from our expertise in the latest technologies to ensure your application is secure, maintainable, and ready for future growth."
      } %>

      <%= render partial: "shared/service-card", locals: {
        reverse: true,
        image_src: asset_path("mobile-dev.jpg"),
        heading: "Mobile Application Design & Development",
        description: "Enhance your startup’s reach with custom mobile applications designed and developed by ClientFirst Labs. We deliver seamless, intuitive mobile experiences that engage users and drive business growth. Whether it's for iOS or Android, our solutions are optimized for performance and usability, ensuring your app stands out in a competitive market."
      } %>
      
      <%= render partial: "shared/service-card", locals: {
        reverse: false,
        image_src: asset_path("modernization.webp"),
        heading: "Website Modernization",
        description: "Give your startup a competitive edge with a modernized website from ClientFirst Labs. We revamp outdated websites to improve aesthetics, functionality, and user experience, making your business more appealing and accessible to customers. Modernize your online presence to boost engagement, enhance SEO, and increase conversion rates."
      } %>
