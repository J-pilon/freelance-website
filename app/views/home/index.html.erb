<section class="px-4 py-16 bg-background-navy md:px-8">
  <div class="flex flex-col items-center content-container">
    <div class="mb-8 pill">
      <p class="text-sm tracking-widest text-white uppercase">Testimonials</p>
    </div>

    <div data-controller="carousel"
      data-carousel-autoplay-value="true"
      data-carousel-interval-value="5000"
      class="relative w-full max-w-4xl mx-auto overflow-hidden rounded-xl">

      <div class="relative">
        <div data-carousel-target="slide" class="flex items-center justify-center hidden w-full text-2xl font-bold text-white bg-transparent h-[420px]">
          <%= render partial: "shared/testimonial-card", locals: {
            name: "Mark Proudfoot",
            message: "“Josiah excelled in building our company's software with clear and concise communication, ensuring a smooth and efficient development process.”",
            title: "President",
            company: "Wecasa"
          } %>
        </div>
        <div data-carousel-target="slide" class="flex items-center justify-center hidden w-full text-2xl font-bold text-white bg-transparent h-[420px]">
          <%= render partial: "shared/testimonial-card", locals: {
            name: "Aaron Dufall",
            message: "“Meeting a tight deadline, Josiah's agility and precision in developing key features not only propelled our project beyond expectations but also showcased his dependable expertise in software development tailored to our needs.”",
            title: "President",
            company: "Scalelabs"
          } %>
        </div>
        <div data-carousel-target="slide" class="flex items-center justify-center hidden w-full text-2xl font-bold text-white bg-transparent h-[420px]">
          <%= render partial: "shared/testimonial-card", locals: {
            name: "Roger Kondrat",
            message: "“Josiah's dedication to self-improvement is truly remarkable. His proactive approach to learning and staying ahead of industry trends is evident in the high-quality work he consistently delivers.”",
