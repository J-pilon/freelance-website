{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint:erb",
      "type": "shell",
      "command": "bundle exec erblint --autocorrect ${file}",
      "problemMatcher": []
    },
    {
      "label": "lint:ruby",
      "type": "shell",
      "command": "bundle exec rubocop -A ${file}",
      "problemMatcher": []
    },
    {
      "label": "format:erb",
      "dependsOrder": "sequence",
      "dependsOn": ["lint:erb", "lint:ruby"],
      "problemMatcher": []
    }
  ]
}
